{
    "name": "xMI-Efficient-ISIC",
    "n_gpu": 1,

    "arch": {
        "type": "xMIEfficientNet",
        "args": {
            "num_classes": 14,
            "fcrp_weights": "saved/models/fCRP-prostate/0602_213033/model_best.pth"
        }
    },
    "data_loader": {
        "type": "ISIC2018DataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 32
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "XMILoss",
        "args": {
            "w_entropy": 1.0,
            "w_mi": 0,
            "w_ortho": 0.2,
            "w_cov": 0.8,
            "w_l1": 0,
            "w_l2": 0.2
        }
    },
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "loss_type": "multiloss",
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": true
    }
}
